<div class="calendar">
  <h2>My Calendar</h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Event</th>
      </tr>
    </thead>
    <tbody>
      {{#each events}}
        <tr>
          <td>{{formatDate date}}</td>
          <td>{{title}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div id="profile-page" class="profile-box">
<div class="container">
  <div class="columns">
    <div class="column">
      <figure class="image is-128x128">
        <img src="profile-picture.jpg" alt="Profile Picture">
      </figure>
    </div>
    <div class="column">
      <div class="content">
        <p><strong>Location:</strong> {{location}}</p>
        <p><strong>Age:</strong> {{age}}</p>
        <p><strong>Email:</strong> {{email}}</p>
      </div>
    </div>
  </div>
  
  <div class="columns">
    <div class="column">
      <!-- Upcoming Events -->
      <div class="box transparent-box">
        <h3 class="title is-4 is-spaced has-text-centered">Upcoming Events</h3>
       <div class="tile is-ancestor">
          <div class="tile is-parent is-spaced has-text-centered">
            <article class="tile is-child box">
              <p class="title">Event 1</p>
              <p class="subtitle">Event description or date</p>
            </article>
          </div>
          <div class="tile is-parent is-spaced has-text-centered">
            <article class="tile is-child box">
              <p class="title">Event 2</p>
              <p class="subtitle">Event description or date</p>
            </article>
          </div>
          <div class="tile is-parent is-spaced has-text-centered">
            <article class="tile is-child box">
              <p class="title">Event 3</p>
              <p class="subtitle">Event description or date</p>
            </article>
          </div>
        </div>
        </div>
    <div class="column">
      <!-- Other Box -->
      <div class="box">
        <h3 class="title is-4 has-text-centered">Calendar</h3>
        <p>Calendar</p>
      </div>
    </div>
  </div>
</div>
</div>

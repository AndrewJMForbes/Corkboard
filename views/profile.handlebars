<div id="profile-page" class="profile-box">
<div class="container">
  <div class="columns">
    <div class="column">
      <div class="container" id="profile-pic">
      </div>
    </div>
    <div class="column">
      <div class="content">
        <p class="is-size-2"><strong> {{user.username}} </strong></p>
        <p class="is-size-4"><strong>Birthday:</strong> {{format_birthday user.birthday}}</p>
        <p class="is-size-4"><strong>Location:</strong> {{user.location}}</p>
        <p class="is-size-4"><strong>Email:</strong> {{user.email}}</p>
      </div>
    </div>
  </div>
  
  <div class="columns">
    <div class="column">
      <!-- Upcoming Events -->
      <div class="box transparent-box">
        <h3 class="title is-4 is-spaced has-text-centered">Upcoming Events</h3>
       <div class="tile is-ancestor">
        {{#each user.upcomingEvents as |event|}}
          <div class="tile is-parent is-spaced has-text-centered">
             <a href="/event/{{event.id}}"><article class="upcomingEvent tile is-child box">
              <p class="title"> {{event.eventName}}  </p>
              <p class="subtitle"> {{event.eventDescription}}</p>
            </article></a>
          </div>
        {{/each}}
        </div>
        </div>
    <div class="column">
      <!-- Other Box -->
      <div class="box">
        <div id='calendar'></div>
<script>
      var events = {{{calendarEvents}}}

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          events: events
        });
        calendar.render();
      });
    </script>

      </div>
    </div>
  </div>
</div>
</div>
